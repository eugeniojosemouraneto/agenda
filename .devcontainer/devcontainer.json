{
  "name": "Node.js Development",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:0-14", // ou outra versão que você precise
  "features": {
    "node": "14" // ou a versão que você deseja
  },
  "postCreateCommand": "npm install", // executa npm install após a criação do container
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "dbaeumer.vscode-eslint", // extensão para ESLint
    "esbenp.prettier-vscode"   // extensão para Prettier
  ],
  "forwardPorts": [3000], // porta que você deseja acessar
  "remoteUser": "node" // usuário padrão para o container
}
